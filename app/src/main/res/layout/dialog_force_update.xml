<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_force_update.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvUpdateMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 버전이 출시되었습니다. 업데이트가 필요합니다."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업데이트"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/tvUpdateMessage"
        app:layout_constraintStart_toStartOf="@+id/tvUpdateMessage"
        app:layout_constraintTop_toBottomOf="@+id/tvUpdateMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>
