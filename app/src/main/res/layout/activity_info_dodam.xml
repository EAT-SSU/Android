<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.infopage.InfoActivity_Dodam"
    android:background="@drawable/shape_round_corners"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="숭실 도담"
                android:fontFamily="@font/noto_bold"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center">

            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/main" >

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/info_tv_dodam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="식당 위치"
                android:fontFamily="@font/noto_medium"
                android:textSize="15dp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tv_dodam_loca"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="숭실대학교 신양관 2층"
                android:fontFamily="@font/noto_regular"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="right" />

        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="20dp">-->

<!--            <RelativeLayout-->
<!--                android:id="@+id/btn_map"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="200dp"/>-->

<!--        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_dodam_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="영업 시간"
                android:textSize="15dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/main" >

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/week_tv_dodam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="@font/noto_medium"
                android:text="주중"
                android:textSize="13dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/lunch_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="점심"
                android:textSize="13dp"
                android:textColor="@color/main"
                android:fontFamily="@font/noto_medium"
                ></TextView>

            <TextView
                android:id="@+id/lunch_tv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="11:20 - 14:00"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/week_tv_dodam2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="13dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="저녁"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/main"
                ></TextView>

            <TextView
                android:id="@+id/tv_space2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="17:00 - 18:30"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="@color/gray">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/weekend_tv_haksik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="주말"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_weekend_dodam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="점심"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/main"
                ></TextView>

            <TextView
                android:id="@+id/tv_weekend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="11:30 - 13:30"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>