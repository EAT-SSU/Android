    <TextView
        android:id="@+id/tv_review1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식사는 맛있게 하셨나요?"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/included" />

    <LinearLayout
        android:id="@+id/tv_review1_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_review1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text=" '"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="메뉴"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="'을(를) 평가해주세요"
            android:textSize="20dp"
            android:textStyle="normal" />
    </LinearLayout>


    <RatingBar
        android:id="@+id/rb_review1"
        style="@style/Widget.AppCompat.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="@color/primary"
        android:rating="0"
        android:secondaryProgressTint="@color/primary"
        android:stepSize="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_review1_menu" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/evaluation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rb_review1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tasty"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">



        <TextView
            android:id="@+id/tasty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맛"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/rb_review_tasty"
            app:layout_constraintEnd_toStartOf="@+id/rb_review_tasty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rb_review_tasty" />

        <RatingBar
            android:id="@+id/rb_review_tasty"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="false"
            android:numStars="5"
            android:progressTint="@color/primary"
            android:rating="0"
            android:secondaryProgressTint="@color/primary"
            android:stepSize="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_tasty">


        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양"
            android:textAlignment="center"
            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/rb_review_quantity"
            app:layout_constraintEnd_toStartOf="@+id/rb_review_quantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rb_review_quantity" />

        <RatingBar
            android:id="@+id/rb_review_quantity"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="false"
            android:numStars="5"
            android:progressTint="@color/primary"
            android:rating="0"
            android:secondaryProgressTint="@color/primary"
            android:stepSize="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <EditText
        android:id="@+id/et_review2_comment"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_edittext"
        android:gravity="top"
        android:hint="한 줄 평 작성하기"
        android:lines="10"
        android:maxLength="150"
        android:padding="20dp"
        android:privateImeOptions="defaultInputmode=korea"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_quantity"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_textnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/tv_maxtext"
        app:layout_constraintTop_toTopOf="@+id/tv_maxtext" />

    <TextView
        android:id="@+id/tv_maxtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / 150"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/et_review2_comment"
        app:layout_constraintTop_toBottomOf="@+id/et_review2_comment" />

    <Button
        android:id="@+id/btn_next_review2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리뷰 등록하기"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@drawable/shape_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/primary" />

    <!--    <ImageButton-->
    <!--        android:id="@+id/ib_camera"-->
    <!--        android:layout_width="50dp"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:src="@drawable/ic_baseline_camera_alt_24"-->
    <!--        app:layout_constraintStart_toStartOf="@+id/et_review2_comment"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/tv_maxtext" />-->


    <ImageButton
        android:id="@+id/ib_add_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_add_pic"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/et_review2_comment"
        app:layout_constraintTop_toBottomOf="@+id/tv_maxtext" />


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toEndOf="@+id/ib_add_pic"
        app:layout_constraintTop_toTopOf="@+id/ib_add_pic"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_next_review1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_btn"
        android:text="다음 단계로"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>