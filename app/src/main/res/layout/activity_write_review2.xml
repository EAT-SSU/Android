    <LinearLayout
        android:id="@+id/tv_review2_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text=" '"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="메뉴"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="'을(를) 평가해주세요"
            android:textSize="20dp"
            android:textStyle="normal" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/rb_review2"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="@color/primary"
        android:rating="0"
        android:secondaryProgressTint="@color/primary"
        android:stepSize="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_review2_menu" />

    <EditText
        android:id="@+id/et_review2_comment"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="top"
        android:lines="10"
        android:maxLength="150"
        android:padding="20dp"
        android:hint="한 줄 평 작성하기"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_edittext"
        android:privateImeOptions="defaultInputmode=korea"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rb_review2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_textnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/tv_maxtext"
        app:layout_constraintTop_toTopOf="@+id/tv_maxtext" />

    <TextView
        android:id="@+id/tv_maxtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / 150"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/et_review2_comment"
        app:layout_constraintTop_toBottomOf="@+id/et_review2_comment" />

    <Button
        android:id="@+id/btn_next_review2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리뷰 등록하기"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@drawable/shape_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/primary" />

    <ImageButton
        android:id="@+id/ib_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_camera_alt_24"
        app:layout_constraintStart_toStartOf="@+id/et_review2_comment"
        app:layout_constraintTop_toBottomOf="@+id/tv_maxtext" />


    <ImageButton
        android:id="@+id/ib_gallery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_bell"
        app:layout_constraintStart_toEndOf="@+id/ib_camera"
        app:layout_constraintTop_toBottomOf="@+id/tv_maxtext" />


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toEndOf="@+id/ib_gallery"
        app:layout_constraintTop_toTopOf="@+id/ib_gallery"
        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>