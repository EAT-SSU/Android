<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_review_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="닉네임"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="메뉴"
        app:layout_constraintBottom_toBottomOf="@+id/tv_review_item_id"
        app:layout_constraintStart_toEndOf="@+id/tv_review_item_id"
        app:layout_constraintTop_toTopOf="@+id/tv_review_item_id" />

    <LinearLayout
        android:id="@+id/ll_review_item_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/tv_review_item_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_review_item_id">


        <ImageView
            android:id="@+id/img_star1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:src="@drawable/img_star"/>

        <TextView
            android:id="@+id/tv_rating_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"

            android:text="5"/>

        <TextView
            android:id="@+id/tv_tasty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="맛"/>
        <ImageView
            android:id="@+id/img_star2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"

            android:src="@drawable/img_star"/>
        <TextView
            android:id="@+id/tv_rating_tasty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:text="2"/>

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="양"/>
        <ImageView
            android:id="@+id/img_star3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"

            android:src="@drawable/img_star"/>

        <TextView
            android:id="@+id/tv_rating_tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"

            android:text="2"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_review_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023.03.03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu" />

    <TextView
        android:id="@+id/tv_review_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제하기"
        android:textColor="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="@+id/ll_review_item_rate"
        app:layout_constraintEnd_toEndOf="@+id/tv_review_item_comment"
        app:layout_constraintTop_toBottomOf="@+id/menu" />

    <TextView
        android:id="@+id/tv_review_item_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="여기 계란국 맛집임...
김치볶음밥에 계란후라이 없어서 아쉽
다음에 또 먹어야지"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/ll_review_item_rate" />

</androidx.constraintlayout.widget.ConstraintLayout>