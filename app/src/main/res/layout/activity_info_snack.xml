<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.infopage.InfoActivity_Snack"
    android:background="@drawable/shape_round_corners"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스낵 코너"
                android:textSize="25dp"
                android:fontFamily="@font/noto_black"
                android:textColor="@color/black"
                android:gravity="center">

            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/main" >

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/info_tv_snack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="식당 위치"
                android:textSize="15dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tv_snack_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="숭실대학교 학생회관 3층"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/noto_regular"
                android:textColor="@color/black"
                android:gravity="right"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/btn_map"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/inca_tv_snack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="영업 시간"
                android:textSize="15dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/main" >

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_snack_week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="주중"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_snack_lunch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="점심"
                android:textSize="13dp"
                android:textColor="@color/main"
                android:fontFamily="@font/noto_medium"
                ></TextView>

            <TextView
                android:id="@+id/tv_snack_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="11:30 - 16:00"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>