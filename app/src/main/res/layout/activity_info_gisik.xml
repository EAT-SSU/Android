<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.infopage.InfoActivity_Gisik"
    android:background="@drawable/shape_round_corners"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기숙사 식당"
                android:fontFamily="@font/noto_black"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center">

            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/main" >

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/info_tv_dodam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="@font/noto_medium"
                android:text="식당 위치"
                android:textSize="15dp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tv_gisik_loca"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/noto_regular"
                android:text="레지던스홀 지하 1층"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="right"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/btn_map"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_dodam_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="영업 시간"
                android:textSize="15dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/main" >

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/week_tv_dodam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="@font/noto_medium"
                android:text="주중"
                android:textSize="13dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/lunch_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="아침"
                android:textSize="13dp"
                android:textColor="@color/main"
                android:fontFamily="@font/noto_medium"
                ></TextView>

            <TextView
                android:id="@+id/lunch_tv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="08:00 - 09:30"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/week_tv_gisik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="13dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_gisik_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="점심"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/main"
                ></TextView>

            <TextView
                android:id="@+id/tv_gisik_time2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="11:00 - 14:00"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/week_tv_dodam2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="13dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="저녁"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/main"
                ></TextView>

            <TextView
                android:id="@+id/tv_space2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="17:00 - 18:30"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="@color/gray">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/weekend_tv_gisik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="주말"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_weekend_gisik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="점심"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/main"
                ></TextView>

            <TextView
                android:id="@+id/tv_weekend_gisik2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="11:00 - 14:00"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black"
                ></TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/week_tv_gisik2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="13dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_space_gisik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="저녁"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/main"
                ></TextView>

            <TextView
                android:id="@+id/tv_space2_gisik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="17:00 - 18:30"
                android:textSize="13dp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>