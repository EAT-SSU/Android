<resources>
    <!-- Base application theme. -->
    <style name="Theme.EatSSUAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/gray600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/gray200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:statusBarColor" >@color/white</item> <!--Status Bar의 배경색-->
        <item name="android:windowLightStatusBar" >true</item> <!--Status Bar 아이콘의 색상 true:검은 아이콘, false:흰 아이콘-->

        <item name="colorControlHighlight">@color/gray200</item>

        <item name="actionMenuTextColor">@color/primary</item> <!--액션 메뉴의 텍스트 색상-->
        <item name="colorControlNormal">@color/primary</item> <!--홈/뒤로가기 버튼의 색상-->
    </style>

    <!-- bottom sheet   -->
    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_corner_top</item>
    </style>

    <!--Toolbar 스타일-->
    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/primary</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textSize">15sp</item> <!-- Toolbar의 타이틀 텍스트 사이즈-->
    </style>

    <!-- Toolbar의 서브타이틀 텍스트-->
    <style name="ToolbarSubtitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/primary</item> <!-- Toolbar의 서브타이틀 텍스트 색상-->
        <item name="android:textSize">12sp</item> <!-- Toolbar의 서브타이틀 텍스트 사이즈-->
    </style>

    <!-- Eat-SSU 기본 폰트 설정-->
    <style name="H1">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20px</item>
        <item name="android:lineHeight">26px</item>
    </style>

    <style name="H2">
