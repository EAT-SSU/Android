    </style>

    <style name="Caption1">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">12px</item>
        <item name="android:lineHeight">18px</item>
    </style>

    <style name="Caption2">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12px</item>
        <item name="android:lineHeight">18px</item>
    </style>

    <style name="Caption3">
        <item name="android:fontFamily">@font/pretendard_medium</item>
