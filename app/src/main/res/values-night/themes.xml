    <style name="Button1">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18px</item>
        <item name="android:lineHeight">24px</item>
    </style>

    <style name="Button2">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">14px</item>
        <item name="android:lineHeight">20px</item>
    </style>

    <style name="Rate">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">40px</item>
    </style>

    <style name="Widget1">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">8px</item>
