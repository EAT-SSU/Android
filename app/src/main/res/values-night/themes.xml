        <item name="android:lineHeight">24px</item>
    </style>

    <style name="Subtitle2">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">16px</item>
        <item name="android:lineHeight">24px</item>
    </style>

    <style name="Body1">
